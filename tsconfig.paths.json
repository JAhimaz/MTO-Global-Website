{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@assets": ["./assets"],
            "@assets/*": ["./assets/*"],
            "@components": ["./components"],
            "@components/*": ["./components/*"],
            "@containers": ["./containers"],
            "@containers/*": ["./containers/*"],
            "@css": ["./css"],
            "@css/*": ["./css/*"],
            "@lang": ["./lang"],
            "@lang/*": ["./lang/*"],
            "@libs": ["./libs"],
            "@libs/*": ["./libs/*"],
            "@routes": ["./routes"],
            "@routes/*": ["./routes/*"],
            "@util": ["./util"],
            "@util/*": ["./util/*"],
        }
    }
